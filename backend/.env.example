PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/esop_analyzer

# AI Configuration (Replace with your own keys - NEVER commit real keys!)
OPENAI_API_KEY=sk-your-openai-key-here
REDUCTO_API_KEY=your-reducto-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Model preferences
CHAT_MODEL=gpt-4-turbo
CLAUDE_MODEL=claude-3-5-sonnet-20241022
EMBEDDING_MODEL=text-embedding-3-small

# Security Configuration (Generate strong random secrets!)
JWT_SECRET=your-very-long-random-jwt-secret-here-min-256-bits
SESSION_SECRET=your-very-long-random-session-secret-here

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
CONCURRENCY_LIMIT=8

# Rate Limiting (automatically adjusted for dev vs prod)
# Development: API_RATE_LIMIT=1000, UPLOAD_RATE_LIMIT=50
# Production: API_RATE_LIMIT=100, UPLOAD_RATE_LIMIT=5
API_RATE_LIMIT=1000
UPLOAD_RATE_LIMIT=50
REQUEST_TIMEOUT=600000

# Logging
LOG_LEVEL=info

# Performance tuning
EMBEDDING_CONCURRENCY=5
ENABLE_PARALLEL_PROCESSING=true
PROCESSING_TIMEOUT=900000